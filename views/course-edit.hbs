
<h1>Edit {{course.title}}</h1>


<form action="/courses/edit", method="post" class="edit_form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Enter the course name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">Image URL</label>
        <span class="helper-text" data-error="Enter the image URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary" type="submit">Edit Course</button>
</form>

<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{course._id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn red">Delete Course</button>
</form>